{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "pretty": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "files": true
  }
}
